{
  "name": "EduCore Ultra",
  "short_name": "EduCore",
  "description": "AI-Powered School Management System with Advanced Analytics and Automation",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#3B82F6",
  "background_color": "#ffffff",
  "lang": "en",
  "dir": "ltr",
  "categories": [
    "education",
    "productivity",
    "business",
    "utilities"
  ],
  "icons": [],
  "screenshots": [],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View main dashboard",
      "url": "/"
    },
    {
      "name": "Students",
      "short_name": "Students",
      "description": "Manage students",
      "url": "/academics/students"
    },
    {
      "name": "Teachers",
      "short_name": "Teachers",
      "description": "Manage teachers",
      "url": "/academics/teachers"
    },
    {
      "name": "Attendance",
      "short_name": "Attendance",
      "description": "Manage attendance",
      "url": "/attendance/records"
    },
    {
      "name": "Exams",
      "short_name": "Exams",
      "description": "Manage exams",
      "url": "/exams"
    },
    {
      "name": "Library",
      "short_name": "Library",
      "description": "Manage library",
      "url": "/library/books"
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "View reports",
      "url": "/reports"
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "App settings",
      "url": "/settings"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+educore",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".png", ".jpg", ".jpeg", ".gif"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", "text/*"]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "background-sync",
    "storage"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "AI-Powered",
    "Offline Support",
    "Push Notifications",
    "Background Sync",
    "File Upload",
    "Data Export",
    "Real-time Updates"
  ],
  "developer": {
    "name": "EduCore Team",
    "url": "https://educore.com"
  }
}
